---
const {
  image,
  img_has_cover,
  title,
  subtitle,
  text,
  bg,
  textdark,
  video,
  button_link,
  date,
  imageContent,
} = Astro.props;
---

<section
  style={`${bg && "background:" + bg}  `}
  class={`bg-main-200 pt-52 pb-28 relative ${
    img_has_cover ? img_has_cover : ""
  }`}
>
  <div
    class={`container wrapper max-w-[1274px] ${
      textdark ? "text-main-200" : "text-white"
    } lg:flex relative z-20 `}
  >
    <div class="max-w-[565px] flex-1 mb-8 lg:mb-0">
      <h1 class="mb-4">{title}</h1>
      <h3 class="mb-8">{subtitle}</h3>
      <p class={`${textdark && "text-main-200"} mb-8` }>
        {text}
      </p>
      {
        button_link && (
          <a
            class={`btn ${textdark ? "primary full" : "secondary"}`}
            href={button_link}
          >
            Poznaj produkt
          </a>
        )
      }
    </div>
    
  </div>
  {
    image && !video && (
      <img
        src={image}
        class="absolute left-0 top-0 w-full h-full object-cover"
      />
    )
  }
  {
    video && (
      <video
        autoplay="true"
        playsinline=""
        loop=""
        controlslist="nodownload"
        poster="https://c.stocksy.com/a/XhRK00/z9/4873047.jpg"
        src="https://c.stocksy.com/a/XhRK00/y0/4873047.mp4"
        class="w-full h-full absolute top-0 left-0 object-cover z-10"
        muted=""
      />
    )
  }
</section>
