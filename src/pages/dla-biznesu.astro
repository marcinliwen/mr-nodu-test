<Layout title="Mr Nodu" isHome={true} textdark={true} >
  <main>
    <section class="pt-52 pb-20 bg-second-200/10 relative">
        <div class="container wrapper max-w-[1274px]">
            <div class=" mb-12 md:mb-20 w-full">
                <h1 class="text-main-200 text-left">Dla biznesu</h1>
            </div>
            <div class="swiper timeLine-swiper">
              <div class="swiper-wrapper ">
                {
                 timeLine.map((item, index) => {
                    return (
                      <div class="swiper-slide">
                        <div class="text-center">
                          <div class="flex items-center justify-center bg-main-100 mb-8 w-[100px] h-[100px] rounded-full mx-auto">
